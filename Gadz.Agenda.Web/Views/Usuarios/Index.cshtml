@model IEnumerable<Usuario> 
@section Styles{
    <style type="text/css">
        .bloco {
            height: 50px;
        }
    </style>
}
<form id="Form1" >
    <div id="box-agenda">
        <div id="box-filtro">
            <fieldset class="bloco">
                <legend>Ferramentas</legend>
                <table>
                    <tr>
                        <td></td>
                        <td>
                            <div class="link">
                                <a asp-action="cadastrar" rel="Subsection">
                                    <img src="~/images/controls/add.gif" style="border:none;width:16px; height:16px;" alt="" asp-append-version="true" />
                                    <span style="line-height:16px;">Adicionar</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                </table>
            </fieldset>
            <fieldset class="bloco">
                <legend>Atribuição</legend>
                <table>
                    <tr>
                        <td><label>Responsavel</label></td>
                        <td>
                            <select asp-items="@ViewBag.Responsaveis">

                            </select>
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <div id="box-tabela">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Nome</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.</td>
                        <td>@u.Nome</td>
                        <td>
                            <a asp-action="editar" asp-route-id="@u.Id">
                                <img src="~/images/controls/edit.gif" style=' border: none; width:18px; height: 18px;' />
                            </a>
                        </td>
                        <td>
                            <a asp-action="excluir" asp-route-id="@u.Id">
                                <img src="~/images/controls/close.png" style=' border: none; width:18px; height: 18px;' />
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>