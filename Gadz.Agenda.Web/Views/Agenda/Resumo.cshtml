@model AgendamentoDetalheModel
<form>
    <div id="box-agenda">
        <fieldset>
            <legend>Tarefa</legend>
            <table class="tab1">
                <tr>
                    <td colspan="3">
                        <h3>
                            <asp:Literal ID="IdTarefa"></asp:Literal> - <asp:Literal ID="Tarefa"></asp:Literal>
                        </h3>
                    </td>
                </tr>
                <tr>
                    <td><label>Cliente</label></td>
                    <td>
                        <input asp-for="Cliente.Nome" readonly />
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>SLA</label></td>
                    <td>
                        <asp:Literal ID="SLA"></asp:Literal>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Responsável</label></td>
                    <td>
                        <input asp-for="Responsavel" readonly />
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Categoria</label></td>
                    <td>
                        <input asp-for="Categoria" readonly />
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Duração</label></td>
                    <td><asp:Literal ID="Duracao"></asp:Literal></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Data da Solicitação</label></td>
                    <td><asp:Literal ID="DataSolicitacao"></asp:Literal></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Motivo da tarefa</label></td>
                    <td colspan="2"><asp:Literal ID="MotivoTarefa"></asp:Literal></td>
                </tr>
                <tr>
                    <td><label>Motivo deste agendamento</label></td>
                    <td colspan="2"><asp:Literal ID="MotivoAgendamento"></asp:Literal></td>
                </tr>
            </table>
        </fieldset>
        <fieldset>
            <legend>Últimos Envios</legend>
            <asp:BulletedList ID="UltimosEnvios">
            </asp:BulletedList>
        </fieldset>

        <fieldset>
            <legend>Próximos Envios</legend>
            <asp:BulletedList ID="ProximosEnvios">
            </asp:BulletedList>
        </fieldset>

        <fieldset>
            <legend>Histórico de Tratamento</legend>
            <asp:BulletedList ID="HistoricoTratamentos">
            </asp:BulletedList>
        </fieldset>

    </div>
</form>
@section Styles {
    <style type="text/css">
        #box-agenda {
            width: 900px;
        }

            #box-agenda label {
                width: 200px;
                color: #00C;
            }

            #box-agenda fieldset {
                margin: 5px;
            }

                #box-agenda fieldset li {
                    list-style: none;
                    text-indent: 20px;
                    margin: 5px;
                }

                #box-agenda fieldset legend {
                    text-indent: 10px;
                }

            #box-agenda table {
                margin: 5px;
            }

        .tab1 {
            padding: 5px;
        }
    </style>
}