@section Styles {
    <style type="text/css">
        #relatorio {
            margin: 0 auto;
            width: 500px;
        }

            #relatorio div {
                margin: 10px;
            }

            #relatorio table, #relatorio table td {
                border: 1px solid #CCC;
            }

                #relatorio table td {
                    padding: 5px;
                }

        #box-filtro table, #box-filtro table td {
            border: none;
        }
    </style>
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $(".data").datepicker();
            $(".data").mask("99/99/9999");
        });
        $(window).ready(function () { ContentResize(); });
        $(window).resize(function () { ContentResize(); });
    </script>
}

    <form id="form1" >
        <div id="relatorio">
            <div id="box-filtro">
                <fieldset class="bloco">
                    <legend>Período</legend>
                    <table>
                        <tr>
                            <td><label>Data</label></td>
                            <td>
                                <asp:TextBox ID="Data" CssClass="data"  AutoPostBack="true"></asp:TextBox>
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset class="bloco">
                    <legend>Atribuição</legend>
                    <table>
                        <tr>
                            <td><label>Grupo</label></td>
                            <td>
                                <asp:DropDownList ID="Grupo"  AutoPostBack="True"
                                                  ViewStateMode="Enabled">
                                </asp:DropDownList>
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
            <div>
                <asp:GridView ID="Tabela" AutoGenerateColumns="False"  ForeColor="#333333" GridLines="None" CellPadding="4">
                    <AlternatingRowStyle BackColor="White" />
                    <Columns>
                        <asp:BoundField HeaderText="Cliente" DataField="cliente" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="300" />
                        <asp:BoundField HeaderText="Demandas" DataField="tarefas" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="Cancelados" DataField="cancelado" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="Pendentes" DataField="pendentes" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="DP" DataField="dp" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="FP" DataField="fp" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="FP15" DataField="fp15" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                    </Columns>
                    <EditRowStyle BackColor="#2461BF" />
                    <FooterStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                    <HeaderStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                    <PagerStyle BackColor="#2461BF" ForeColor="White" HorizontalAlign="Center" />
                    <RowStyle BackColor="#EFF3FB" />
                    <SelectedRowStyle BackColor="#D1DDF1" Font-Bold="True" ForeColor="#333333" />
                    <SortedAscendingCellStyle BackColor="#F5F7FB" />
                    <SortedAscendingHeaderStyle BackColor="#6D95E1" />
                    <SortedDescendingCellStyle BackColor="#E9EBEF" />
                    <SortedDescendingHeaderStyle BackColor="#4870BE" />
                </asp:GridView>
            </div>
            <div>
                <asp:GridView ID="Tabela2" AutoGenerateColumns="False"  ForeColor="#333333" GridLines="None" CellPadding="4">
                    <AlternatingRowStyle BackColor="White" />
                    <Columns>
                        <asp:BoundField HeaderText="Responsável" DataField="responsavel" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="300" />
                        <asp:BoundField HeaderText="Demandas" DataField="tarefas" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="Cancelados" DataField="cancelado" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="Pendentes" DataField="pendentes" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="DP" DataField="dp" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="FP" DataField="fp" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                        <asp:BoundField HeaderText="FP15" DataField="fp15" ItemStyle-HorizontalAlign="Center" ItemStyle-Width="80" />
                    </Columns>
                    <EditRowStyle BackColor="#2461BF" />
                    <FooterStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                    <HeaderStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                    <PagerStyle BackColor="#2461BF" ForeColor="White" HorizontalAlign="Center" />
                    <RowStyle BackColor="#EFF3FB" />
                    <SelectedRowStyle BackColor="#D1DDF1" Font-Bold="True" ForeColor="#333333" />
                    <SortedAscendingCellStyle BackColor="#F5F7FB" />
                    <SortedAscendingHeaderStyle BackColor="#6D95E1" />
                    <SortedDescendingCellStyle BackColor="#E9EBEF" />
                    <SortedDescendingHeaderStyle BackColor="#4870BE" />
                </asp:GridView>
            </div>
        </div>
    </form>