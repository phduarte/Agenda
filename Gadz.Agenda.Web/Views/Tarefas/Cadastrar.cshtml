@model Tarefa
@section Styles{
    <link href="~/css/forms.css" rel="stylesheet" />
    <style type="text/css">
        .box-formulario {
            width: 470px;
        }

        .style1 {
            width: 400px;
        }

        .style2 {
            width: 100px;
        }

        .style4 {
            width: 238px;
        }
    </style>
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            $(".data").datepicker();
            $(".data").mask("99/99/9999");
        });
    </script>
}

<div class="box-formulario box-center">
    <header>
        <h5>Tarefa</h5>
        <a asp-action="index" class="fechar"></a>
    </header>
    <form role="form" method="post" enctype="application/x-www-form-urlencoded">
        <table>
            <tr>
                <td class="style2">
                    <label asp-for="Nome"></label>
                </td>
                <td class="style1">
                    <input asp-for="Nome" />
                    <span class="text-danger" asp-validation-for="Nome"></span>
                </td>
            </tr>
            <tr>
                <td class="style2">
                    <label asp-for="DataSolicitacao"></label>
                </td>
                <td class="style1">
                    <input asp-for="DataSolicitacao" />
                    <span class="text-danger" asp-validation-for="DataSolicitacao"></span>
                </td>
            </tr>
            <tr>
                <td class="style2">
                    <label asp-for="Categoria"></label>
                </td>
                <td class="style1">
                    <select asp-for="Categoria" asp-items="@ViewBag.Grupos"></select>
                    <span class="text-danger" asp-validation-for="Categoria"></span>
                </td>
            </tr>
            <tr>
                <td class="style2">
                    <label asp-for="Observacao"></label>
                </td>
                <td class="style1">
                    <textarea asp-for="Observacao"></textarea>
                    <span class="text-danger" asp-validation-for="Observacao"></span>
                </td>
            </tr>
            <tr>
                <td class="style2">
                    <label asp-for="Status"></label>
                </td>
                <td class="style1">
                    <select asp-for="Status">
                        <option value="Ativo">Ativo</option>
                        <option value="Inativo">Inativo</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </td>
            </tr>
            <tr>
                <td class="style2">
                    <input type="hidden" asp-for="Id" />
                </td>
                <td class="style4">
                    <button class="botao">Salvar</button>
                </td>
            </tr>
        </table>
    </form>
    <footer>
        <div class="text-danger" asp-validation-summary="All"></div>
    </footer>
</div>