@model TarefaModel
@section Styles{
    <style type="text/css">
        #box-formulario {
            width: 470px;
        }

        .style1 {
            width: 400px;
        }

        .style2 {
            width: 100px;
        }

        .style4 {
            width: 238px;
        }
    </style>
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            $(".data").datepicker();
            $(".data").mask("99/99/9999");
        });
    </script>
}

<div id="box-formulario" class="box-center">
    <header id="top">
        <h5>Tarefa</h5>
        <a asp-action="pesquisar" class="fechar"></a>
    </header>
    <div id="center">
        <form id="form1">
            <table>
                <tr>
                    <td class="style2">
                        <label asp-for="Nome"></label>
                    </td>
                    <td class="style1">
                        <input asp-for="Nome" />
                        <span asp-validation-for="Nome"></span>
                    </td>
                </tr>
                <tr>
                    <td class="style2">
                        <label asp-for="DataSolicitacao"></label>
                    </td>
                    <td class="style1">
                        <input asp-for="DataSolicitacao" />
                        <span asp-validation-for="DataSolicitacao"></span>
                    </td>
                </tr>
                <tr>
                    <td class="style2">
                        <label asp-for="Grupo"></label>
                    </td>
                    <td class="style1">
                        <select asp-for="Grupo" asp-items="Model.Grupos"></select>
                        <span asp-validation-for="Grupo"></span>
                    </td>
                </tr>
                <tr>
                    <td class="style2">
                        <label asp-for="Observacao"></label>
                    </td>
                    <td class="style1">
                        <textarea asp-for="Observacao"></textarea>
                        <span asp-validation-for="Observacao"></span>
                    </td>
                </tr>
                <tr>
                    <td class="style2">
                        <input type="hidden" asp-for="Id" />
                    </td>
                    <td class="style4">
                        <button class="botao">Salvar</button>
                    </td>
                </tr>
            </table>
        </form>
    </div><!-- center -->
    <footer id="bottom">
        <div asp-validation-summary="All"></div>
    </footer>
</div>