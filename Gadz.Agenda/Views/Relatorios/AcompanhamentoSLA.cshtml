@section Styles {
    <style type="text/css">
        #box-agenda {
            margin: 0 auto;
            width: 1200px;
        }
    </style>
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
            $(".data").datepicker();
            $(".data").mask("99/99/9999");
        });

        $(window).ready(function () { ContentResize(); });
        $(window).resize(function () { ContentResize(); });
    </script>
}

    <form id="Form1" runat="server">
        <asp:ScriptManager ID="ScriptManager1" runat="server">
        </asp:ScriptManager>
        <div id="box-agenda">
            <div id="box-filtro">
                <fieldset class="bloco">
                    <legend>Período</legend>
                    <table>
                        <tr>
                            <td><label>De</label></td>
                            <td>
                                <asp:TextBox ID="txtinicio" CssClass="data" runat="server" AutoPostBack="true"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td><label>Até</label></td>
                            <td>
                                <asp:TextBox ID="txtFim" CssClass="data" runat="server" AutoPostBack="true"></asp:TextBox>
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset class="bloco">
                    <legend>Atribuição</legend>
                    <table>
                        <tr>
                            <td><label>Cliente</label></td>
                            <td>
                                <asp:DropDownList ID="cmbCliente" runat="server" AutoPostBack="True"
                                                  ViewStateMode="Enabled">
                                </asp:DropDownList>
                            </td>
                        </tr>
                        <tr>
                            <td><label>Responsável</label></td>
                            <td>
                                <asp:DropDownList ID="cmbResponsavel" runat="server" AutoPostBack="True"
                                                  ViewStateMode="Enabled">
                                </asp:DropDownList>
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <fieldset class="bloco">
                    <legend>Situação</legend>
                    <table>
                        <tr>
                            <td><label>Status</label></td>
                            <td>
                                <asp:DropDownList ID="cmbStatus" runat="server" AutoPostBack="True">
                                </asp:DropDownList>
                            </td>
                        </tr>
                        <tr>
                            <td><label>Diagnóstico</label></td>
                            <td>
                                <asp:DropDownList ID="cmbDiagnostico" runat="server" AutoPostBack="True">
                                </asp:DropDownList>
                            </td>
                        </tr>
                    </table>
                </fieldset>
                <!--
                <fieldset class="bloco">
                    <legend>Atualizar</legend>
                    <table>
                        <tr>
                            <td>
                                <asp:Button ID="Button1" OnClick="Preencher" Text="Atualizar" CssClass="botao" runat="server" />
                            </td>
                        </tr>
                    </table>
                </fieldset>
                -->
            </div>
            <div id="box-tabela">
                <asp:UpdatePanel runat="server">
                    <ContentTemplate>
                        <asp:GridView ID="Tabela" AutoGenerateColumns="False" runat="server"
                                      ForeColor="#333333" GridLines="None"
                                      CellPadding="4">
                            <AlternatingRowStyle BackColor="White" />
                            <Columns>
                                <asp:BoundField HeaderText="Relatório" DataField="relatorio" ItemStyle-Width="220" />
                                <asp:BoundField HeaderText="Prazo" DataField="prazo" ItemStyle-Width="60" />
                                <asp:BoundField HeaderText="Envio" DataField="envio" ItemStyle-Width="60" />
                                <asp:BoundField HeaderText="Responsável" DataField="responsavel" ItemStyle-Width="120" />
                                <asp:BoundField HeaderText="Cliente" DataField="cliente" ItemStyle-Width="120" />
                                <asp:BoundField HeaderText="Status" DataField="status" ItemStyle-Width="100" />
                                <asp:BoundField HeaderText="Diagnóstico" DataField="diagnostico" ItemStyle-Width="100" />
                                <asp:ImageField HeaderText="Farol" DataImageUrlField="farol" ControlStyle-Width="18" ItemStyle-Width="30" />
                                <asp:BoundField HeaderText="Obs" DataField="obs" ItemStyle-Width="300" ItemStyle-HorizontalAlign="Left" />
                            </Columns>
                            <EditRowStyle BackColor="#2461BF" />
                            <FooterStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                            <HeaderStyle BackColor="#507CD1" Font-Bold="True" ForeColor="White" />
                            <PagerStyle BackColor="#2461BF" ForeColor="White" HorizontalAlign="Center" />
                            <RowStyle BackColor="#EFF3FB" />
                            <SelectedRowStyle BackColor="#D1DDF1" Font-Bold="True" ForeColor="#333333" />
                            <SortedAscendingCellStyle BackColor="#F5F7FB" />
                            <SortedAscendingHeaderStyle BackColor="#6D95E1" />
                            <SortedDescendingCellStyle BackColor="#E9EBEF" />
                            <SortedDescendingHeaderStyle BackColor="#4870BE" />
                        </asp:GridView>
                    </ContentTemplate>
                </asp:UpdatePanel>
            </div>
        </div>
        <asp:Timer ID="Timer1" OnTick="Preencher" Interval="60000" runat="server">
        </asp:Timer>
    </form>